    private void cbxChocolateActionPerformed(java.awt.event.ActionEvent evt) {                                             

    }                                            

    private void cbxCherriesActionPerformed(java.awt.event.ActionEvent evt) {                                            

    }                                           

    private void cbxpriceMediumActionPerformed(java.awt.event.ActionEvent evt) {                                               

    }                                              

    private void btnOrderActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String Order_detail;
        Order_detail = "";
        int pay = 0;
        if(cbxChocolate.isSelected()){
            pay = pay + 10;
            Order_detail += "1st Topping  :Chocolate" + "\n";
        }if(cbxCherries.isSelected()){
            pay = pay + 10;
            Order_detail += "2nd Topping :Cherries" + "\n";
        }if(cbxWhippedcream.isSelected()){ 
            pay = pay + 10;  
            Order_detail += "3rd Topping  :Whipped Cream" + "\n";
        }if(cbxpriceSmall.isSelected()){
            pay = pay + 45;
            Order_detail += "Size                :Small" + "\n";
        }if(cbxpriceMedium.isSelected()){
            pay = pay + 65; 
            Order_detail += "Size                :Medium" + "\n";
        }if(cbxpriceLarge.isSelected()){
            pay = pay + 80;
            Order_detail += "Size                :Large" + "\n";
        }
        txtOrderdetail.setText(Order_detail + "=========================================" + "\n" + "Total Price    : RM " + pay);
        
    }                                        

    private void btnExitActionPerformed(java.awt.event.ActionEvent evt) {                                        
        System.exit(0);
    }                                       

    private void btnResetActionPerformed(java.awt.event.ActionEvent evt) {                                         
        cbxChocolate.setSelected(false);
        cbxCherries.setSelected(false);
        cbxWhippedcream.setSelected(false);
        cbxpriceSmall.setSelected(false);
        cbxpriceMedium.setSelected(false);
        cbxpriceLarge.setSelected(false);
        txtOrderdetail.setText("");
    }                                        

